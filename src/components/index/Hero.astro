<style>
  .hero {
    width: 100%;
    min-height: 60vh;
    padding: 3rem 1rem 2rem 1rem;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .hero-title {
    font-size: 2.7rem;
    margin-bottom: 2.2rem;
    text-align: center;
    color: var(--color-primary-dark, #6f8f7c);
    font-weight: 700;
    letter-spacing: -1px;
  }

  .hero-content {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: stretch;
    gap: 2.5rem;
    width: 100%;
    max-width: 1000px;
    background: rgba(255, 255, 255, 0.92);
    border-radius: 1.5rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.07);
    padding: 2.2rem 2.5rem;
  }

  .hero-image img {
    width: 300px;
    height: 400px;
    object-fit: cover;
    border-radius: 1rem;
    background: #eee;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  .hero-text {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 1.18rem;
    color: var(--color-text-main, #222);
    line-height: 1.7;
  }

  .hero-btn {
    margin-top: 2rem;
    padding: 0.85rem 2.2rem;
    font-size: 1.13rem;
    font-weight: 600;
    color: #fff;
    background: var(--color-primary, #94b09f);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
  }

  .hero-btn:hover {
    background: var(--color-primary-dark, #6f8f7c);
  }

  @media (max-width: 900px) {
    .hero-content {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      padding: 1.2rem 0.5rem;
    }
    .hero-image img {
      width: 100%;
      max-width: 350px;
      height: auto;
    }
    .hero-text {
      font-size: 1.05rem;
      text-align: center;
    }
  }
</style>

---
// No props for now
import { Phone, Mail } from "@lucide/astro";
import WhatsAppLogo from "../../assets/icons/whatsapp.svg";
import { CONTACTS } from "../../config/contacts.ts";
---

<section id="contattami">
  <div class="contattami-content">
    <h2>Vuoi maggiori informazioni?</h2>
    <p>
      Non esitare a contattarmi: puoi inviarmi un messaggio su whatsapp, una
      mail o chiamarmi direttamente.
    </p>
    <div class="contattami-buttons">
      <a href={`tel:${CONTACTS.phone}`} class="contattami-btn">
        <Phone class="button-icon" /> Chiamami
      </a>
      <a href={`mailto:${CONTACTS.email}`} class="contattami-btn">
        <Mail class="button-icon" /> Scrivimi una email
      </a>
      <a href={`https://wa.me/${CONTACTS.phone}`} class="contattami-btn">
        <img class="button-icon" src={WhatsAppLogo.src} alt="WhatsApp" /> Scrivimi
        su WhatsApp
      </a>
    </div>
  </div>
</section>

<style>
  #contattami {
    width: 100%;
    padding: 3rem 1.5rem;
    background: var(--color-primary-light, #c6d6cc);
    display: flex;
    justify-content: center;
  }
  .contattami-content {
    max-width: 600px;
    width: 100%;
    text-align: center;
    background: #fff;
    padding: 2rem 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }
  .contattami-content h2 {
    font-size: 2rem;
    color: var(--color-primary-dark, #6f8f7c);
    margin-bottom: 1rem;
  }
  .contattami-content p {
    font-size: 1.15rem;
    color: var(--color-text-main, #222);
    margin-bottom: 2rem;
  }
  .contattami-buttons {
    display: grid;
    justify-content: center;
    gap: 1rem;
  }
  .contattami-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.85rem 2.2rem;
    font-size: 1.13rem;
    font-weight: 600;
    color: #fff;
    background: var(--color-primary, #94b09f);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
    text-decoration: none;
  }
  .contattami-btn:hover {
    background: var(--color-primary-dark, #6f8f7c);
  }

  .button-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.7rem;
    width: 30px;
    height: 30px;
  }

  @media (max-width: 600px) {
    .contattami-content {
      padding: 1.2rem 0.5rem;
    }
    #contattami {
      padding: 2rem 0.7rem;
    }
  }
</style>

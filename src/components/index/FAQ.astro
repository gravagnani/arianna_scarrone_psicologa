---
import { FAQS } from "../../config/faqs.ts";
import { Plus, Minus } from "@lucide/astro";
---

<script>
  // Smooth open/close animation for FAQ answers
  document.addEventListener("DOMContentLoaded", () => {
    const detailsList = document.querySelectorAll(".faq-item");

    detailsList.forEach((details) => {
      const summary = details.querySelector("summary");
      const content = details.querySelector(".faq-content");
      const plusIcon = details.querySelector(".icon-plus");
      const minusIcon = details.querySelector(".icon-minus");

      if (!content) return;

      // Initial state
      content.style.overflow = "hidden";
      content.style.transition =
        "max-height 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.3s ease";
      content.style.maxHeight = details.open
        ? content.scrollHeight + "px"
        : "0px";
      content.style.opacity = details.open ? "1" : "0";

      // Toggle icons based on initial state
      if (plusIcon && minusIcon) {
        plusIcon.style.display = details.open ? "none" : "block";
        minusIcon.style.display = details.open ? "block" : "none";
      }

      details.addEventListener("click", (e) => {
        e.preventDefault();

        if (details.open) {
          // Close with animation
          content.style.maxHeight = content.scrollHeight + "px";
          content.style.opacity = "1";
          requestAnimationFrame(() => {
            content.style.maxHeight = "0px";
            content.style.opacity = "0";
          });

          // Toggle icons
          if (plusIcon && minusIcon) {
            plusIcon.style.display = "block";
            minusIcon.style.display = "none";
          }

          content.addEventListener("transitionend", function handler() {
            details.open = false;
            content.removeEventListener("transitionend", handler);
          });
        } else {
          // Open with animation
          details.open = true;
          content.style.maxHeight = "0px";
          content.style.opacity = "0";
          requestAnimationFrame(() => {
            content.style.maxHeight = content.scrollHeight + "px";
            content.style.opacity = "1";
          });

          // Toggle icons
          if (plusIcon && minusIcon) {
            plusIcon.style.display = "none";
            minusIcon.style.display = "block";
          }

          // Do not clear maxHeight after opening, so next open animates from 0 to scrollHeight
          content.addEventListener("transitionend", function handler() {
            content.removeEventListener("transitionend", handler);
          });
        }
      });

      // On resize, update maxHeight if open
      window.addEventListener("resize", () => {
        if (details.open) {
          content.style.maxHeight = content.scrollHeight + "px";
          setTimeout(() => {
            content.style.maxHeight = "";
          }, 400);
        }
      });
    });
  });
</script>

<section id="faq">
  <div class="container">
    <h2 class="title">Domande frequenti</h2>
    <p class="subtitle">
      Trovi qui le risposte alle domande pi√π comuni. Se hai altri dubbi, non
      esitare a contattarmi.
    </p>

    <div class="faq-list">
      {
        FAQS.map(({ question, answer }) => (
          <details class="faq-item">
            <summary class="faq-question">
              <span class="question-text">{question}</span>
              <span class="icon-wrapper">
                <Plus class="icon icon-plus" />
                <Minus class="icon icon-minus" />
              </span>
            </summary>
            <div class="faq-content">
              <div class="faq-content-inner">
                <p class="faq-answer">{answer}</p>
              </div>
            </div>
          </details>
        ))
      }
    </div>
  </div>
</section>

<style>
  #faq {
    background: linear-gradient(
      135deg,
      var(--color-bg-main) 0%,
      var(--color-bg-soft) 100%
    );
    position: relative;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .title {
    font-size: 2.5rem;
    color: var(--color-primary-dark);
    margin-bottom: var(--space-md);
    text-align: center;
    font-weight: 700;
    letter-spacing: -0.5px;
  }

  .subtitle {
    text-align: center;
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xxl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .faq-item {
    background: var(--color-bg-main);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    border-left: 4px solid var(--color-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition:
      box-shadow var(--transition-normal),
      border-color var(--transition-normal),
      transform var(--transition-normal);
    overflow: hidden;
    cursor: pointer;
  }

  .faq-item:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    border-left-color: var(--color-primary-dark);
    transform: translateX(2px);
  }

  .faq-item[open] {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary-light);
    border-left-color: var(--color-primary-dark);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg) var(--space-xl);
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-main);
    outline: none;
    user-select: none;
    list-style: none;
    cursor: pointer;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .question-text {
    flex: 1;
    line-height: 1.5;
  }

  .icon-wrapper {
    position: relative;
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    background: var(--color-primary-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      background var(--transition-normal),
      transform var(--transition-normal);
  }

  .faq-item:hover .icon-wrapper {
    background: var(--color-primary);
    transform: scale(1.1);
  }

  .icon {
    width: 18px;
    height: 18px;
    color: white;
    position: absolute;
    transition:
      transform var(--transition-fast),
      opacity var(--transition-fast);
  }

  .icon-plus {
    display: block;
  }

  .icon-minus {
    display: none;
  }

  .faq-item[open] .icon-plus {
    transform: rotate(90deg);
  }

  .faq-content {
    /* Only animate height, not padding */
    padding: 0;
  }

  .faq-content-inner {
    padding: 0 var(--space-xl) var(--space-lg);
    padding-top: var(--space-xs);
  }

  .faq-answer {
    color: var(--color-text-main);
    font-size: var(--font-size-base);
    line-height: 1.7;
    margin: 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: var(--space-xl) var(--space-md);
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: var(--font-size-base);
      margin-bottom: var(--space-xl);
    }

    .faq-question {
      padding: var(--space-md) var(--space-lg);
      font-size: var(--font-size-base);
    }

    .faq-content-inner {
      padding: 0 var(--space-lg) var(--space-md);
      padding-top: var(--space-xs);
    }

    .faq-answer {
      font-size: var(--font-size-sm);
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 1.75rem;
    }

    .faq-question {
      padding: var(--space-md);
      font-size: var(--font-size-sm);
    }

    .faq-content-inner {
      padding: 0 var(--space-md) var(--space-md);
      padding-top: var(--space-xs);
    }

    .icon-wrapper {
      width: 24px;
      height: 24px;
    }

    .icon {
      width: 14px;
      height: 14px;
    }
  }
</style>

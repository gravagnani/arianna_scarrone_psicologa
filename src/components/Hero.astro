<style>
  .hero {
    width: 100%;
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .hero-content {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    gap: 2rem;
    width: 100%;
    max-width: 900px;
  }

  .hero-image img {
    width: 300px;
    height: 400px;
    object-fit: cover;
    border-radius: 1rem;
    background: #eee;
  }

  .hero-text {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 1.2rem;
    color: var(--color-text-main, #222);
  }

  .hero-btn {
    margin-top: 2rem;
    padding: 0.75rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
    background: var(--color-primary, #94b09f);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .hero-btn:hover {
    background: var(--color-primary-dark, #6f8f7c);
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }
    .hero-image img {
      width: 100%;
      max-width: 350px;
      height: auto;
    }
    .hero-text {
      font-size: 1rem;
      text-align: center;
    }
  }
</style>

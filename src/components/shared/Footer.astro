---
// No props for now
import Logo from "../../assets/logos/logo_white.svg";
import { PATHS } from "../../config/paths.ts";
import { CONTACTS } from "../../config/contacts.ts";
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-info">
      <Logo class="footer-logo" />
      <div class="footer-about">
        <div class="footer-title">Arianna Scarrone</div>
        <div class="footer-role">Psicologa</div>
        <div class="footer-address">{CONTACTS.fullAddress}</div>
      </div>
    </div>
    <nav class="footer-nav" aria-label="Footer navigation">
      {
        PATHS.map((link) => (
          <a href={link.href} class="footer-link">
            {link.text}
          </a>
        ))
      }
    </nav>
  </div>
  <div class="footer-copyright">
    <span>
      &copy; {new Date().getFullYear()}
      {CONTACTS.name}. All rights reserved
    </span>
    <span class="delimiter"> | </span>
    <span>P.IVA {CONTACTS.vatNumber}</span>
  </div>
  <div class="footer-credit">Made with ❤️ by Giuseppe Ravagnani</div>
</footer>

<style>
  .footer {
    width: 100%;
    background: var(--color-primary);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-content {
    width: 100%;
    max-width: 1100px;
    padding: var(--space-xl) var(--space-md);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: var(--space-xl);
  }

  .footer-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--space-lg);
  }

  .footer-logo {
    height: 80px;
    width: auto;
  }

  .footer-about {
    display: flex;
    flex-direction: column;
    gap: var(--space-xxs);
  }

  .footer-title {
    font-size: var(--font-size-xl);
    font-weight: 700;
  }

  .footer-role {
    font-size: var(--font-size-base);
    color: var(--color-primary-light);
  }

  .footer-address {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-link {
    color: #fff;
    text-decoration: none;
    font-size: var(--font-size-base);
    transition:
      text-decoration var(--transition-fast),
      color var(--transition-fast);
  }

  .footer-link:hover {
    text-decoration: underline;
    color: var(--color-primary-light);
  }

  .footer-copyright {
    width: 100%;
    padding: var(--space-md);
    display: flex;
    justify-content: center;
    column-gap: var(--space-md);
    flex-wrap: wrap;
    text-align: center;
    font-size: var(--font-size-base);
    color: var(--color-text-light);
    border-bottom: 1px solid var(--color-primary-light);
  }

  .footer-credit {
    width: 100%;
    font-size: var(--font-size-sm);
    text-align: center;
    color: var(--color-text-light);
    padding: var(--space-md);
  }

  @media (max-width: 700px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      gap: var(--space-lg);
    }

    .footer-info {
      flex-direction: column;
      align-items: center;
      gap: var(--space-sm);
      text-align: center;
    }

    .footer-nav {
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--space-md);
      justify-content: center;
      border: 1px solid;
      padding: var(--space-md);
    }

    .footer-copyright .delimiter {
      display: none;
    }
  }
</style>

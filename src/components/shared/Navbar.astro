---
import Logo from "../../assets/logos/logo_dark.svg";
import { Phone, Mail } from "@lucide/astro";
import { PATHS } from "../../config/paths.ts";
import { CONTACTS } from "../../config/contacts.ts";

const navbarContacts = [
  { logo: Phone, text: CONTACTS.phoneText, link: `tel:${CONTACTS.phone}` },
  { logo: Mail, text: CONTACTS.email, link: `mailto:${CONTACTS.email}` },
];
---

<header id="navbar">
  <!-- TOP CONTACT BAR -->
  <div id="contacts">
    {
      navbarContacts.map((contact) => (
        <div class="contact">
          <contact.logo class="icon" />
          <a href={contact.link}>{contact.text}</a>
        </div>
      ))
    }
  </div>

  <!-- MAIN NAV -->
  <nav id="links" aria-label="Main navigation">
    <a class="logo-link" href="/">
      <Logo class="logo" />
      <h1 class="logo-title">
        <span class="logo-name">ARIANNA</span>
        <span class="logo-name">SCARRONE</span>
        <span class="logo-role">PSICOLOGA</span>
      </h1>
    </a>

    <button id="menu-toggle" aria-label="Toggle menu" type="button">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div id="nav-menu">
      {
        PATHS.map((link) => (
          <a href={link.href} class="nav-menu-link click-link-open-navbar">
            {link.text}
          </a>
        ))
      }

      <!-- MOBILE CONTACTS -->
      <div id="contacts-mobile">
        {
          navbarContacts.map((contact) => (
            <div class="contact">
              <a href={contact.link}>{contact.text}</a>
            </div>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function () {
    const navbar = document.getElementById("links");
    const menuToggle = document.getElementById("menu-toggle");
    const navMenu = document.getElementById("nav-menu");

    const SCROLL_THRESHOLD = 50;
    let lastScroll = window.pageYOffset;
    let ticking = false;
    // If coming from another page, set clickLink = true to prevent unwanted navbar animation
    let clickLink = false;
    if (
      document.referrer &&
      document.referrer.startsWith(window.location.origin) &&
      !["", "dove-ricevo", "#chi-sono"].includes(window.location.hash)
    ) {
      clickLink = true;
    }

    function handleScroll() {
      const currentScroll = window.pageYOffset;
      const goingDown = currentScroll > lastScroll;
      const goingUp = currentScroll < lastScroll;

      if (clickLink) {
        // If a link was just clicked, do not collapse or change navbar
        lastScroll = currentScroll;
        return;
      }

      // Always update scrolled state
      if (currentScroll > SCROLL_THRESHOLD) {
        navbar?.classList.add("scrolled");
      } else {
        navbar?.classList.remove("scrolled");
      }

      // Scroll down: close menu and restore navbar
      if (goingDown && currentScroll > SCROLL_THRESHOLD) {
        navMenu?.classList.remove("active");
        menuToggle?.classList.remove("active");
        navbar?.classList.add("scrolled");
      }
      // Scroll up: reduce navbar
      else if (goingUp && currentScroll > SCROLL_THRESHOLD) {
        navbar?.classList.remove("scrolled");
      }

      lastScroll = currentScroll;
    }

    Array.from(
      document.getElementsByClassName("click-link-open-navbar"),
    ).forEach((link) => {
      link.addEventListener("click", () => {
        clickLink = true;
        // Expand navbar if collapsed
        navbar?.classList.remove("scrolled");
      });
    });

    let scrollTimeout;
    window.addEventListener("scroll", function () {
      if (!ticking) {
        window.requestAnimationFrame(function () {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
      // Debounce: reset clickLink after scroll finishes (200ms)
      if (scrollTimeout) clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        clickLink = false;
      }, 200);
    });

    // Menu toggle
    menuToggle?.addEventListener("click", () => {
      navMenu?.classList.toggle("active");
      menuToggle?.classList.toggle("active");
    });

    // Close menu when clicking on a link
    navMenu?.querySelectorAll("a")?.forEach((link) => {
      link.addEventListener("click", () => {
        navMenu?.classList.remove("active");
        menuToggle?.classList.remove("active");
      });
    });
  });
</script>

<style>
  #navbar {
    background: var(--color-primary);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: var(--z-navbar);
    transition: var(--navbar-transition);
    box-shadow: var(--navbar-shadow);
  }

  #contacts {
    padding: var(--space-xs) var(--space-xxl);
    display: flex;
    flex-direction: row;
    width: 100%;
    height: auto;
    gap: var(--gap-md);
    border-bottom: 1px solid var(--color-primary-dark);
    transition: padding var(--navbar-transition);
  }

  #contacts-mobile {
    display: none;
  }

  #links {
    padding: var(--space-sm) var(--space-md);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: var(--gap-lg);
    position: relative;
    transition: padding var(--navbar-transition);
  }

  #links.scrolled {
    padding: var(--space-xxs) var(--space-md);
    transition: padding var(--navbar-transition);
  }

  #links.scrolled .logo {
    height: var(--navbar-logo-height-scrolled);
  }

  #links.scrolled .logo-name {
    font-size: 0.7rem;
  }

  #links.scrolled .logo-role {
    font-size: 0.3rem;
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  nav a.logo-link:hover {
    text-decoration: none;
  }

  .logo {
    height: var(--navbar-logo-height);
    width: auto;
    transition: height var(--navbar-transition);
  }

  .logo-title {
    display: flex;
    flex-direction: column;
    margin-left: var(--space-sm);
    color: var(--color-text-main);
    /* gap: var(--space-xxs); */
    margin: 0;
  }

  .logo-name {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    transition: font-size var(--navbar-transition);
  }

  .logo-role {
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-text-main);
    transition: font-size var(--navbar-transition);
  }

  #nav-menu {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--gap-lg);
  }

  #menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-xs);
    gap: var(--hamburger-gap);
    position: absolute;
    right: var(--space-md);
    z-index: var(--z-menu-toggle);
  }

  #menu-toggle span {
    width: var(--hamburger-width);
    height: var(--hamburger-height);
    background-color: var(--color-text-main);
    transition: var(--navbar-transition);
    border-radius: var(--radius-sm);
  }

  #menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  #menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  #menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .contact {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .contact a {
    text-decoration: none;
    color: var(--color-text-secondary);
    transition: text-decoration var(--transition-fast);
  }

  .contact a:hover {
    text-decoration: underline;
  }

  nav a {
    text-decoration: none;
    font-weight: bold;
    color: var(--color-text-main);
    transition: text-decoration var(--transition-fast);
  }

  nav a:hover {
    text-decoration: underline;
  }

  .icon {
    width: var(--icon-sm);
    height: var(--icon-sm);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    #contacts {
      display: none;
    }

    #contacts-mobile {
      display: flex;
      flex-direction: column;
      gap: var(--gap-sm);
      width: 100%;
      border-top: 1px solid var(--color-primary-dark);
      padding-top: var(--space-lg);
    }

    #links {
      justify-content: space-between;
      padding: var(--space-sm);
    }

    .logo {
      height: var(--navbar-logo-height-mobile);
    }

    .logo-name {
      font-size: 1.5rem;
    }

    .logo-role {
      font-size: 1rem;
    }

    #menu-toggle {
      display: flex;
    }

    #nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: var(--menu-width-mobile);
      max-width: var(--menu-width-mobile-max);
      height: 100vh;
      background: var(--color-primary);
      flex-direction: column;
      align-items: flex-start;
      padding: var(--space-xxl) var(--space-lg) var(--space-xl);
      gap: var(--space-xl);
      box-shadow: var(--menu-shadow);
      transition: right var(--navbar-transition);
      z-index: var(--z-navbar);
      overflow-y: auto;
    }

    #nav-menu.active {
      right: 0;
    }

    #nav-menu a {
      width: 100%;
      padding: var(--space-sm) 0;
      font-size: var(--font-size-lg);
    }

    #nav-menu #contacts-mobile a {
      font-size: var(--font-size-sm);
      padding: 0;
      font-weight: normal;
    }
  }

  @media (max-width: 480px) {
    #nav-menu {
      width: 80%;
    }
  }
</style>
